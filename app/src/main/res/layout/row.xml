<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/textViewNationalNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National Number: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Name: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Species: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Height: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Weight: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon HP: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Attack: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonDefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Defense: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Level: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewPokemonGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Gender: "
        android:textSize="14sp"
        android:textColor="#000000" />
</LinearLayout>
